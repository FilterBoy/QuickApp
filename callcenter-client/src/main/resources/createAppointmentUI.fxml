<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.callcenter_client.CreateAppointmentUIController">
   <children>
      <VBox prefHeight="100.0">
         <children>
            <BorderPane>
               <top>
                  <Label fx:id="headingLabel" BorderPane.alignment="CENTER" />
               </top>
               <left>
                  <Label text="Date:" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <DatePicker fx:id="datePicker" BorderPane.alignment="CENTER" />
               </right>
            </BorderPane>
            <BorderPane>
               <left>
                  <Label text="Begin:" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                        <ChoiceBox fx:id="hourChoiceBox" prefWidth="75.0" />
                        <ChoiceBox fx:id="minChoiceBox" prefWidth="75.0" />
                     </children>
                  </HBox>
               </right>
            </BorderPane>
            <BorderPane>
               <left>
                  <Label text="Duration (in min):" BorderPane.alignment="CENTER" />
               </left>
               <right>
                  <HBox BorderPane.alignment="CENTER">
                     <children>
                        <TextField fx:id="durationTextField" alignment="CENTER_RIGHT" prefWidth="100.0" />
                        <Button fx:id="okButton" minWidth="70.0" mnemonicParsing="false" text="OK" />
                     </children>
                  </HBox>
               </right>
            </BorderPane>
         </children>
      </VBox>
   </children>
</HBox>
